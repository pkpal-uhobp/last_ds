    def load_keys_from_file(self):
        """–ó–∞–≥—Ä—É–∑–∫–∞ –∫–ª—é—á–µ–π –∏–∑ —Ñ–∞–π–ª–∞"""
        path, _ = QFileDialog.getOpenFileName(
            self, "–ó–∞–≥—Ä—É–∑–∏—Ç—å –∫–ª—é—á–∏", "", 
            "Text Files (*.txt);;All Files (*)"
        )
        if path:
            try:
                with open(path, 'r', encoding='utf-8') as f:
                    content = f.read().strip()
                
                if not content:
                    QMessageBox.warning(self, "‚ö†Ô∏è –ü—É—Å—Ç–æ", "–§–∞–π–ª –ø—É—Å—Ç.")
                    return
                
                # –ü–∞—Ä—Å–∏–º –∫–ª—é—á–∏ –∏–∑ —Ñ–∞–π–ª–∞
                # –û–∂–∏–¥–∞–µ–º—ã–π —Ñ–æ—Ä–º–∞—Ç: N=..., e=..., d=... –∏–ª–∏ –ø—Ä–æ—Å—Ç–æ —á–∏—Å–ª–∞ –ø–æ —Å—Ç—Ä–æ–∫–∞–º
                lines = content.split('\n')
                N_val = None
                e_val = None
                d_val = None
                
                for line in lines:
                    line = line.strip()
                    if not line or line.startswith('#'):
                        continue
                    
                    # –ü–∞—Ä—Å–∏–º —Ñ–æ—Ä–º–∞—Ç—ã: N=123, e=456, d=789
                    if '=' in line:
                        parts = line.split('=', 1)
                        key = parts[0].strip().lower()
                        value = parts[1].strip()
                        try:
                            if key == 'n':
                                N_val = int(value)
                            elif key == 'e':
                                e_val = int(value)
                            elif key == 'd':
                                d_val = int(value)
                        except ValueError:
                            continue
                    else:
                        # –ü—ã—Ç–∞–µ–º—Å—è —Ä–∞—Å–ø–∞—Ä—Å–∏—Ç—å –∫–∞–∫ —á–∏—Å–ª–æ
                        try:
                            num = int(line)
                            if N_val is None:
                                N_val = num
                            elif e_val is None:
                                e_val = num
                            elif d_val is None:
                                d_val = num
                        except ValueError:
                            continue
                
                if N_val is None or e_val is None or d_val is None:
                    QMessageBox.warning(
                        self, "‚ö†Ô∏è –û—à–∏–±–∫–∞",
                        "–ù–µ —É–¥–∞–ª–æ—Å—å —Ä–∞—Å–ø–∞—Ä—Å–∏—Ç—å –∫–ª—é—á–∏ –∏–∑ —Ñ–∞–π–ª–∞.\n\n"
                        "–û–∂–∏–¥–∞–µ–º—ã–π —Ñ–æ—Ä–º–∞—Ç:\n"
                        "N=123456\n"
                        "e=65537\n"
                        "d=12345\n\n"
                        "–∏–ª–∏ –ø—Ä–æ—Å—Ç–æ —Ç—Ä–∏ —á–∏—Å–ª–∞ –ø–æ —Å—Ç—Ä–æ–∫–∞–º."
                    )
                    return
                
                # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∫–ª—é—á–∏
                self.N_edit.setText(str(N_val))
                self.e_manual_edit.setText(str(e_val))
                self.d_edit.setText(str(d_val))
                
                # –í—ã–∑—ã–≤–∞–µ–º –º–µ—Ç–æ–¥ —É—Å—Ç–∞–Ω–æ–≤–∫–∏ –∫–ª—é—á–µ–π
                self.set_manual_keys()
                
                QMessageBox.information(self, "‚úÖ –ó–∞–≥—Ä—É–∑–∫–∞", 
                                      f"–ö–ª—é—á–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã –∏–∑:\n{path}")
            except Exception as e:
                QMessageBox.critical(self, "‚ùå –û—à–∏–±–∫–∞", f"–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:\n{e}")

