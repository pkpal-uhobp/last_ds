    def set_manual_keys(self):
        """–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∫–ª—é—á–µ–π, –≤–≤–µ–¥–µ–Ω–Ω—ã—Ö –≤—Ä—É—á–Ω—É—é"""
        try:
            N_text = self.N_edit.text().strip()
            e_text = self.e_manual_edit.text().strip()
            d_text = self.d_edit.text().strip()
            
            if not N_text:
                raise ValueError("–í–≤–µ–¥–∏—Ç–µ N (–º–æ–¥—É–ª—å).")
            if not e_text:
                raise ValueError("–í–≤–µ–¥–∏—Ç–µ e (–æ—Ç–∫—Ä—ã—Ç–∞—è —ç–∫—Å–ø–æ–Ω–µ–Ω—Ç–∞).")
