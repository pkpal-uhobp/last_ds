    def prepare_blocks(self):
        try:
            if self.N is None:
                raise ValueError("–°–Ω–∞—á–∞–ª–∞ –≤—ã—á–∏—Å–ª–∏—Ç–µ –∫–ª—é—á–∏ (N –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–æ).")
            text = self.input_text_edit.toPlainText().strip()
            if not text:
                raise ValueError("–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è –ø–æ–¥–≥–æ—Ç–æ–≤–∫–∏ –±–ª–æ–∫–æ–≤.")
            
            # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–ø—Ä–µ–¥–µ–ª—è–µ–º —Ç–∏–ø
            input_type = self.detect_input_type(text)
            if input_type != 'text':
                raise ValueError("–ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –±–ª–æ–∫–æ–≤ –¥–æ—Å—Ç—É–ø–Ω–∞ —Ç–æ–ª—å–∫–æ –¥–ª—è —Ç–µ–∫—Å—Ç–∞ (–ê-–Ø –∏ –ø—Ä–æ–±–µ–ª).")
            
            digits = text_to_digits(text)
            self.blocks = split_into_blocks(digits, self.N)
            
            # –§–æ—Ä–º–∏—Ä—É–µ–º —Å—Ç—Ä–æ–∫—É –±–ª–æ–∫–æ–≤ –¥–ª—è —É–¥–æ–±–Ω–æ–≥–æ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
            blocks_str = ', '.join(map(str, self.blocks))

            # –í –ø–æ–ª–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –≤—ã–≤–æ–¥–∏–º —Ç–æ–ª—å–∫–æ —Å—Ç—Ä–æ–∫—É –±–ª–æ–∫–æ–≤
            self.output_text_edit.setPlainText(blocks_str)

            # –ü–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–∏ –ø–∏—à–µ–º –≤ –ª–æ–≥
            self.log_text_edit.append(
                f"[–ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –±–ª–æ–∫–æ–≤]\n"
                f"–ò—Å—Ö–æ–¥–Ω—ã–π —Ç–µ–∫—Å—Ç: {text[:500]}{'...' if len(text) > 500 else ''}\n"
                f"–î–ª–∏–Ω–∞ —Ç–µ–∫—Å—Ç–∞: {len(text)} —Å–∏–º–≤–æ–ª–æ–≤\n"
                f"–¶–∏—Ñ—Ä–æ–≤–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ (—Ñ—Ä–∞–≥–º–µ–Ω—Ç): {digits[:120]}{'...' if len(digits) > 120 else ''}\n"
                f"–ë–ª–æ–∫–∏ M_i: {self.blocks}\n"
                f"–°—Ç—Ä–æ–∫–∞ –±–ª–æ–∫–æ–≤: {blocks_str}\n"
                f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –±–ª–æ–∫–æ–≤: {len(self.blocks)}\n"
                f"N = {self.N}\n"
            )
            QMessageBox.information(self, "‚úÖ –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞", 
                                  f"–ü–æ–¥–≥–æ—Ç–æ–≤–ª–µ–Ω–æ {len(self.blocks)} –±–ª–æ–∫–æ–≤.\n\n"
                                  f"–ë–ª–æ–∫–∏: {blocks_str}")
        except Exception as e:
            QMessageBox.critical(self, "‚ùå –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞", str(e))

    def encrypt_rsa(self):
        try:
            if self.N is None:
                raise ValueError("–°–Ω–∞—á–∞–ª–∞ –≤—ã—á–∏—Å–ª–∏—Ç–µ –∫–ª—é—á–∏ (N –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–æ).")

            content = self.input_text_edit.toPlainText().strip()
            if not content:
                raise ValueError("–í–≤–µ–¥–∏—Ç–µ –¥–∞–Ω–Ω—ã–µ –¥–ª—è —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è.")
            
            # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–ø—Ä–µ–¥–µ–ª—è–µ–º —Ç–∏–ø –∏ –ø–æ–ª—É—á–∞–µ–º –±–ª–æ–∫–∏
            input_type = self.detect_input_type(content)
            
            if input_type == 'text':
                # –¢–µ–∫—Å—Ç - –∏—Å–ø–æ–ª—å–∑—É–µ–º –ø–æ–¥–≥–æ—Ç–æ–≤–ª–µ–Ω–Ω—ã–µ –±–ª–æ–∫–∏ –∏–ª–∏ –≥–æ—Ç–æ–≤–∏–º –Ω–æ–≤—ã–µ
                if self.blocks:
                    blocks_to_encrypt = self.blocks
                else:
                    # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≥–æ—Ç–æ–≤–∏–º –±–ª–æ–∫–∏ –∏–∑ —Ç–µ–∫—Å—Ç–∞
                    digits = text_to_digits(content)
                    blocks_to_encrypt = split_into_blocks(digits, self.N)
                    self.blocks = blocks_to_encrypt
            elif input_type == 'blocks':
                # –ë–ª–æ–∫–∏ M_i –≤—Ä—É—á–Ω—É—é
                blocks_to_encrypt = parse_numbers(content)
                if not blocks_to_encrypt:
                    raise ValueError("–ù–µ —É–¥–∞–ª–æ—Å—å —Ä–∞—Å–ø–∞—Ä—Å–∏—Ç—å –±–ª–æ–∫–∏ M_i.")
                # –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –≤—Å–µ –±–ª–æ–∫–∏ < N
                invalid_blocks = [m for m in blocks_to_encrypt if m >= self.N]
                if invalid_blocks:
                    raise ValueError(f"–ë–ª–æ–∫–∏ {invalid_blocks} >= N={self.N}. –í—Å–µ –±–ª–æ–∫–∏ –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å < N.")
                self.blocks = blocks_to_encrypt
            else:
                raise ValueError("–ù–µ —É–¥–∞–ª–æ—Å—å –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ç–∏–ø –¥–∞–Ω–Ω—ã—Ö. –í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç (–ê-–Ø –∏ –ø—Ä–æ–±–µ–ª) –∏–ª–∏ –±–ª–æ–∫–∏ M_i.")
            
            e = int(self.e_edit.text())
            if self.phi and (e <= 1 or e >= self.phi):
                raise ValueError(f"e –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –≤ –¥–∏–∞–ø–∞–∑–æ–Ω–µ (1, œÜ(N)={self.phi}).")
            
            self.cipher_blocks = [mod_exp(m, e, self.N) for m in blocks_to_encrypt]
            
            # –§–æ—Ä–º–∏—Ä—É–µ–º —Å—Ç—Ä–æ–∫—É –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã—Ö –±–ª–æ–∫–æ–≤ –¥–ª—è —É–¥–æ–±–Ω–æ–≥–æ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
            cipher_str = ', '.join(map(str, self.cipher_blocks))

            # –í –ø–æ–ª–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç–æ–ª—å–∫–æ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏
            self.output_text_edit.setPlainText(cipher_str)

            # –ü–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–∏ –ø–∏—à–µ–º –≤ –ª–æ–≥
            self.log_text_edit.append(
                f"[–®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ]\n"
                f"–ò—Å—Ö–æ–¥–Ω—ã–µ –±–ª–æ–∫–∏ M_i: {blocks_to_encrypt}\n"
                f"–ó–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏ C_i: {self.cipher_blocks}\n"
                f"–°—Ç—Ä–æ–∫–∞ –±–ª–æ–∫–æ–≤ C_i: {cipher_str}\n"
                f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –±–ª–æ–∫–æ–≤: {len(self.cipher_blocks)}\n"
                f"–ü–∞—Ä–∞–º–µ—Ç—Ä—ã: N={self.N}, e={e}\n"
            )
            QMessageBox.information(self, "‚úÖ –®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ", 
                                  f"–ó–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–æ {len(self.cipher_blocks)} –±–ª–æ–∫–æ–≤.\n\n"
                                  f"–ó–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏: {cipher_str}")
        except Exception as e:
            QMessageBox.critical(self, "‚ùå –®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ", str(e))

    def decrypt_rsa(self):
        try:
            if self.N is None or self.d is None:
                raise ValueError("–°–Ω–∞—á–∞–ª–∞ –≤—ã—á–∏—Å–ª–∏—Ç–µ –∫–ª—é—á–∏ (N –∏ d –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã).")

            content = self.input_text_edit.toPlainText().strip()

            # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∏—Å—Ç–æ—á–Ω–∏–∫ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã—Ö –±–ª–æ–∫–æ–≤
            if content:
                # –ü—ã—Ç–∞–µ–º—Å—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—ã–µ –∏–∑ –ø–æ–ª—è –≤–≤–æ–¥–∞
                input_type = self.detect_input_type(content)
                if input_type == 'blocks':
                    cipher_blocks_to_decrypt = parse_numbers(content)
                    if not cipher_blocks_to_decrypt:
                        raise ValueError("–ù–µ —É–¥–∞–ª–æ—Å—å —Ä–∞—Å–ø–∞—Ä—Å–∏—Ç—å –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏ C_i.")
                else:
                    raise ValueError("–î–ª—è —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∫–∏ –≤–≤–µ–¥–∏—Ç–µ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏ C_i (—á–∏—Å–ª–∞ —á–µ—Ä–µ–∑ –∑–∞–ø—è—Ç—É—é).")
            elif self.cipher_blocks:  # –ò—Å–ø–æ–ª—å–∑—É–µ–º —É–∂–µ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏
                cipher_blocks_to_decrypt = self.cipher_blocks
            else:
                raise ValueError("–ù–µ—Ç –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã—Ö –±–ª–æ–∫–æ–≤ –¥–ª—è —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∫–∏.\n"
                               "–í–≤–µ–¥–∏—Ç–µ –±–ª–æ–∫–∏ C_i –≤ –ø–æ–ª–µ –≤—Ö–æ–¥–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö –∏–ª–∏ —Å–Ω–∞—á–∞–ª–∞ –≤—ã–ø–æ–ª–Ω–∏—Ç–µ —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ.")
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –≤—Å–µ –±–ª–æ–∫–∏ < N
            invalid_blocks = [c for c in cipher_blocks_to_decrypt if c >= self.N]
            if invalid_blocks:
                QMessageBox.warning(
                    self, "‚ö†Ô∏è –í–Ω–∏–º–∞–Ω–∏–µ",
                    f"–ù–µ–∫–æ—Ç–æ—Ä—ã–µ –±–ª–æ–∫–∏ C_i ({invalid_blocks}) >= N={self.N}.\n"
                    f"–í–æ–∑–º–æ–∂–Ω–æ, —ç—Ç–∏ –±–ª–æ–∫–∏ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω—ã –¥—Ä—É–≥–∏–º –∫–ª—é—á–æ–º.\n"
                    f"–ü—Ä–æ–¥–æ–ª–∂–∞–µ–º —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ..."
                )
            
            decrypted_blocks = [mod_exp(c, self.d, self.N) for c in cipher_blocks_to_decrypt]
            
            # –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º –±–ª–æ–∫–∏ –≤ —Ç–µ–∫—Å—Ç
            digits = ''
            for m in decrypted_blocks:
                s = str(m)
                digits += s
            
            try:
                text = digits_to_text(digits)
            except Exception as e:
                text = f"[–û—à–∏–±–∫–∞ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è: {e}]"
            
            # –§–æ—Ä–º–∏—Ä—É–µ–º —Å—Ç—Ä–æ–∫—É —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã—Ö –±–ª–æ–∫–æ–≤
            decrypted_str = ', '.join(map(str, decrypted_blocks))

            # –í –≤—ã—Ö–æ–¥–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –ø–∏—à–µ–º —Ç–æ–ª—å–∫–æ —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–π —Ç–µ–∫—Å—Ç
            self.output_text_edit.setPlainText(text)
            
            # –ü–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–∏ –ø–∏—à–µ–º –≤ –ª–æ–≥
            self.log_text_edit.append(
                f"[–î–µ—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ]\n"
                f"–ó–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏ C_i: {cipher_blocks_to_decrypt}\n"
                f"–†–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–µ –±–ª–æ–∫–∏ M_i': {decrypted_blocks}\n"
                f"–°—Ç—Ä–æ–∫–∞ –±–ª–æ–∫–æ–≤ M_i': {decrypted_str}\n"
                f"–¶–∏—Ñ—Ä–æ–≤–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ: {digits}\n"
                f"–ü–∞—Ä–∞–º–µ—Ç—Ä—ã: N={self.N}, d={self.d}\n"
            )
            QMessageBox.information(self, "‚úÖ –£—Å–ø–µ—Ö", 
                                  f"–†–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–æ {len(decrypted_blocks)} –±–ª–æ–∫–æ–≤.\n\n"
                                  f"–¢–µ–∫—Å—Ç: {text}")
        except Exception as e:
            QMessageBox.critical(self, "‚ùå –î–µ—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ", str(e))

    # --- –§–∞–π–ª–æ–≤—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ ---
    def load_input_data(self):
        """–ó–∞–≥—Ä—É–∑–∫–∞ –≤—Ö–æ–¥–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö –∏–∑ —Ñ–∞–π–ª–∞"""
        path, _ = QFileDialog.getOpenFileName(
            self, "–ó–∞–≥—Ä—É–∑–∏—Ç—å –≤—Ö–æ–¥–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ", "", 
            "Text Files (*.txt);;All Files (*)"
        )
        if path:
            try:
                with open(path, 'r', encoding='utf-8') as f:
                    content = f.read().strip()
                
                if not content:
                    QMessageBox.warning(self, "‚ö†Ô∏è –ü—É—Å—Ç–æ", "–§–∞–π–ª –ø—É—Å—Ç.")
                    return
                
                # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–ø—Ä–µ–¥–µ–ª—è–µ–º —Ç–∏–ø –¥–∞–Ω–Ω—ã—Ö
                input_type = self.detect_input_type(content)

                self.input_text_edit.setPlainText(content)
                
                if input_type == 'text':
                    self.log_text_edit.append(
                        f"[–ó–∞–≥—Ä—É–∑–∫–∞ —Ç–µ–∫—Å—Ç–∞]\n–§–∞–π–ª: {path}\n"
                        f"–î–ª–∏–Ω–∞ —Ç–µ–∫—Å—Ç–∞: {len(content)} —Å–∏–º–≤–æ–ª–æ–≤\n"
                        f"–¢–µ–∫—Å—Ç –∑–∞–≥—Ä—É–∂–µ–Ω.\n"
                    )
                    QMessageBox.information(self, "‚úÖ –ó–∞–≥—Ä—É–∑–∫–∞", f"–¢–µ–∫—Å—Ç –∑–∞–≥—Ä—É–∂–µ–Ω –∏–∑:\n{path}\n\n–î–ª–∏–Ω–∞: {len(content)} —Å–∏–º–≤–æ–ª–æ–≤")
                elif input_type == 'blocks':
                    blocks = parse_numbers(content)
                    if not blocks:
                        QMessageBox.warning(self, "‚ö†Ô∏è –û—à–∏–±–∫–∞", "–ù–µ —É–¥–∞–ª–æ—Å—å —Ä–∞—Å–ø–∞—Ä—Å–∏—Ç—å –±–ª–æ–∫–∏ –∏–∑ —Ñ–∞–π–ª–∞.")
                        return
                    
                    # –ü—Ä–æ–≤–µ—Ä–∫–∞ –±–ª–æ–∫–æ–≤ –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ N
                    invalid_blocks = []
                    if self.N is not None:
                        for m in blocks:
                            if m >= self.N:
                                invalid_blocks.append(m)
                    
                    if invalid_blocks:
                        QMessageBox.warning(
                            self, "‚ö†Ô∏è –í–Ω–∏–º–∞–Ω–∏–µ",
                            f"–ù–∞–π–¥–µ–Ω—ã –±–ª–æ–∫–∏ >= N={self.N}: {invalid_blocks}\n"
                            f"–£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ –±–ª–æ–∫–∏ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—Ç –∫–ª—é—á—É."
                        )
                    
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –∫–∞–∫ –±–ª–æ–∫–∏ M_i (–º–æ–∂–Ω–æ –±—É–¥–µ—Ç –∑–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å)
                    self.blocks = blocks
                    self.log_text_edit.append(
                        f"[–ó–∞–≥—Ä—É–∑–∫–∞ –±–ª–æ–∫–æ–≤]\n–§–∞–π–ª: {path}\n"
                        f"–ó–∞–≥—Ä—É–∂–µ–Ω–æ –±–ª–æ–∫–æ–≤: {len(blocks)}\n"
                        f"–ë–ª–æ–∫–∏: {blocks}\n"
                    )
                    QMessageBox.information(self, "‚úÖ –ó–∞–≥—Ä—É–∑–∫–∞", f"–ó–∞–≥—Ä—É–∂–µ–Ω–æ {len(blocks)} –±–ª–æ–∫–æ–≤.")
                else:
                    self.log_text_edit.append(
                        f"[–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö]\n–§–∞–π–ª: {path}\n"
