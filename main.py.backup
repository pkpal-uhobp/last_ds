                if abs(div_float) > 1e300: div_str = "—Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–µ"
                else:
                    div_str = f"{div_float:.20g}"
                    if '.' not in div_str and 'e' not in div_str:
                        div_str += ".0"
            except Exception:
                div_str = "–æ—à–∏–±–∫–∞"
            report = f"""–û–ø–µ—Ä–∞—Ü–∏–∏:
