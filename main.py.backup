            self.d_label.setText(f"d = {self.d}")
            
            # –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–ª–µ e –≤ —Ä–µ–∂–∏–º–µ —Ä–∞—Å—á–µ—Ç–∞ (–¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏)
            self.e_edit.setText(str(e_val))
            
            # –í—ã–≤–æ–¥–∏–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
            self.output_text_edit.append(
                f"[–ö–ª—é—á–∏ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã –≤—Ä—É—á–Ω—É—é]\n"
                f"N = {self.N}\n"
