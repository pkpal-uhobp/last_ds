    def calculate_keys(self):
        try:
            p_text = self.p_edit.text().strip()
            q_text = self.q_edit.text().strip()
            if not p_text or not q_text:
                raise ValueError("–í–≤–µ–¥–∏—Ç–µ –∏–ª–∏ —Å–≥–µ–Ω–µ—Ä–∏—Ä—É–π—Ç–µ p –∏ q.")
            p = int(p_text)
            q = int(q_text)
            e_val = int(self.e_edit.text())
            
            if p < 2 or q < 2:
                raise ValueError("p –∏ q –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å –ø—Ä–æ—Å—Ç—ã–º–∏ —á–∏—Å–ª–∞–º–∏ (‚â• 2).")
            if p == q:
                raise ValueError("p –∏ q –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å —Ä–∞–∑–ª–∏—á–Ω—ã.")
            
            self.N = p * q
            self.phi = (p - 1) * (q - 1)
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º e
            if e_val <= 1 or e_val >= self.phi:
                raise ValueError(f"e –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –≤ –¥–∏–∞–ø–∞–∑–æ–Ω–µ (1, œÜ(N)={self.phi}).")
            
            g, _, _ = extended_gcd(e_val, self.phi)
            if g != 1:
                # –ü—ã—Ç–∞–µ–º—Å—è –Ω–∞–π—Ç–∏ –ø–æ–¥—Ö–æ–¥—è—â–µ–µ e
                e_found = None
                for cand in [3, 5, 17, 257, 65537]:
                    if 1 < cand < self.phi and extended_gcd(cand, self.phi)[0] == 1:
                        e_found = cand
                        break
                
                if e_found:
                    e_val = e_found
                    self.e_edit.setText(str(e_val))
                    QMessageBox.information(
                        self, "‚ÑπÔ∏è –ò–∑–º–µ–Ω–µ–Ω–∏–µ e",
                        f"–í–≤–µ–¥–µ–Ω–Ω–æ–µ e –Ω–µ –≤–∑–∞–∏–º–Ω–æ –ø—Ä–æ—Å—Ç–æ —Å œÜ(N).\n"
                        f"–ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≤—ã–±—Ä–∞–Ω–æ e = {e_val}."
                    )
                else:
                    raise ValueError(f"–í–≤–µ–¥–µ–Ω–Ω–æ–µ e={e_val} –Ω–µ –≤–∑–∞–∏–º–Ω–æ –ø—Ä–æ—Å—Ç–æ —Å œÜ(N)={self.phi}.\n"
                                   f"–ù–µ —É–¥–∞–ª–æ—Å—å –Ω–∞–π—Ç–∏ –ø–æ–¥—Ö–æ–¥—è—â–µ–µ e –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏.")
            
            self.e_val = e_val
            self.d = mod_inverse(e_val, self.phi)
            
            # –û–±–Ω–æ–≤–ª—è–µ–º –º–µ—Ç–∫–∏
            self.N_label.setText(f"N = {self.N}")
            self.phi_label.setText(f"œÜ(N) = {self.phi}")
            self.d_label.setText(f"d = {self.d}")
            
            # –õ–æ–≥–∏—Ä—É–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –∫–ª—é—á–∞—Ö
            self.log_text_edit.append(
                f"[–ö–ª—é—á–∏ –≤—ã—á–∏—Å–ª–µ–Ω—ã]\n"
                f"p = {p}\n"
                f"q = {q}\n"
                f"N = p √ó q = {self.N}\n"
                f"œÜ(N) = (p-1) √ó (q-1) = {self.phi}\n"
                f"e = {e_val}\n"
                f"d = e‚Åª¬π mod œÜ(N) = {self.d}\n"
                f"\n–û—Ç–∫—Ä—ã—Ç—ã–π –∫–ª—é—á: (N={self.N}, e={e_val})\n"
                f"–°–µ–∫—Ä–µ—Ç–Ω—ã–π –∫–ª—é—á: d={self.d}\n"
                f"\n–¢–µ–ø–µ—Ä—å –º–æ–∂–Ω–æ:\n"
                f"- –ü–æ–¥–≥–æ—Ç–æ–≤–∏—Ç—å –±–ª–æ–∫–∏ –∏–∑ —Ç–µ–∫—Å—Ç–∞\n"
                f"- –ó–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å –±–ª–æ–∫–∏ M_i\n"
                f"- –†–∞—Å—à–∏—Ñ—Ä–æ–≤–∞—Ç—å –±–ª–æ–∫–∏ C_i\n\n"
            )
            QMessageBox.information(self, "‚úÖ –ö–ª—é—á–∏ –≥–æ—Ç–æ–≤—ã",
                                    f"–ö–ª—é—á–∏ —É—Å–ø–µ—à–Ω–æ –≤—ã—á–∏—Å–ª–µ–Ω—ã!\n\n"
                                    f"–û—Ç–∫—Ä—ã—Ç—ã–π –∫–ª—é—á: (N={self.N}, e={e_val})\n"
                                    f"–°–µ–∫—Ä–µ—Ç–Ω—ã–π –∫–ª—é—á: d={self.d}")
        except Exception as e:
            QMessageBox.critical(self, "‚ùå –†–∞—Å—á—ë—Ç", str(e))

