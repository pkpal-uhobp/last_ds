    def load_keys(self):
        """–ó–∞–≥—Ä—É–∑–∫–∞ –∫–ª—é—á–µ–π –∏–∑ —Ñ–∞–π–ª–∞"""
        path, _ = QFileDialog.getOpenFileName(
